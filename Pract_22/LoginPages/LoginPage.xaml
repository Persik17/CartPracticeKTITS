<Page x:Class="Pract_22.LoginPages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract_22.LoginPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Label x:Name="Login" Content="Введите логин" Width="300"/>
            <TextBox x:Name="LogTb" Width="300" Height="30"/>
            <Label x:Name="Pass" Content="Введите пароль"  Width="300"/>
            <PasswordBox x:Name="PassBoxPb"  Width="300" Height="30"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button x:Name="EnterBtn" Width="90" Content="Войти" FontSize="20" Height="40" Click="EnterBtn_Click"/>
            <Button x:Name="RegBtn" Width="210" Content="Регистрация" FontSize="20" Height="40" Click="RegBtn_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
